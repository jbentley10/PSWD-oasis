{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
, "app/page.tsx"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
